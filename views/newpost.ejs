<%- include('partials/head.ejs') %>
    <title><%= title %> | Book repository</title>
</head>

<body>
    <header>
        <%- include('partials/header.ejs') %>
    </header>

    <section class="newpost-container">
      <div>
        <h1><%= title %></h1>
      </div>
      <form action="" method="POST">
          <div class="form-group">
              <label for="title">Title</label>
              <input name="title" placeholder="Title" type="text" id="title" required>
          </div>
          <div class="form-group">
              <label for="message">Message</label>
              <textarea id="message" name="message" rows="5" placeholder="Type your message" required></textarea>
          </div>
          <button>Post message</button>
      </form>
    </section>
    
<%- include('partials/footer.ejs') %>